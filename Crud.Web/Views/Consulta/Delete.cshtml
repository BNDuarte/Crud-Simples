@model Crud.Domain.Consultas.Consulta

@{
    ViewData["Title"] = "Deletar Consulta";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja deletar essa <strong>Consulta</strong></h3>
<div>
    <h4>Empresa</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            @Html.DisplayFor(model => model.Paciente.Nome)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Paciente.CartaoSus)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Medico.Nome)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.DataConsulta)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
