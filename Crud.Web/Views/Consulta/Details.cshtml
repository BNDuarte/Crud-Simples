@model Crud.Domain.Consultas.Consulta

@{
    ViewData["Title"] = "Detalhes da Consulta";
}

<div class="row">
    <h4>Médico</h4>
    <hr />
    <div class="col-md-12">
        <dl class="dl-horizontal">
            <dt>Paciente:</dt>
            <dd>
                @Html.DisplayFor(model => model.Paciente.Nome)
            </dd>
            <dt>Cartão SUS:</dt>
            <dd>
                @Html.DisplayFor(model => model.Paciente.CartaoSus)
            </dd>
            <dt>Médico:</dt>
            <dd>
                @Html.DisplayFor(model => model.Medico.Nome)
            </dd>
            <dt>Data Consulta:</dt>
            <dd>
                @Html.DisplayFor(model => model.DataConsulta)
            </dd>
        </dl>
    </div>

    <div id="actions" class="row">
        <div class="col-md-12">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deletar</a>
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </div>
</div>
