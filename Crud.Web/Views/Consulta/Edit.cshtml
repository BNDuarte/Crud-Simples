@model Crud.Domain.Consultas.Consulta
@{
    ViewData["Title"] = "Editar Consulta";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Consulta</h3>
    </div>
</div>
<div class="row form-wrapper">
    <div class="col-md-12">
        <form asp-action="Edit" asp-controller="Consulta" method="POST">
            <input type="hidden" asp-for="Id">
            <div class="form-group">
                <div class="form-group">
                    <label for="Paciente">Paciente</label>
                    <select asp-for="PacienteId" class="form-control" asp-items="ViewBag.PacienteId">
                        <option value="">-- Escolha o Paciente --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Medico">Médico</label>
                    <select asp-for="MedicoId" class="form-control" asp-items="ViewBag.MedicoId">
                        <option value="">-- Escolha o Médico --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Data">Data Consulta</label>
                    <input type="text" class="form-control" asp-for="DataConsulta">
                </div>

                <button type="submit" class="btn btn-default">Salvar</button>
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
}