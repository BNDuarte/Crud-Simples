@model Crud.Domain.Especialidades.Especialidade
@{
    ViewData["Title"] = "Editar Especialidade";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Especialidade</h3>
    </div>
</div>
<div class="row form-wrapper">
    <div class="col-md-12">
        <form asp-action="Edit" asp-controller="Especialidade" method="POST">
            <input type="hidden" asp-for="Id">
            <div class="form-group">
                <div class="form-group">
                    <label for="Descricao">Descrição</label>
                    <input type="text" class="form-control" asp-for="Descricao">
                </div>

                <button type="submit" class="btn btn-default">Salvar</button>
                <a href="/Especialidade" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
}