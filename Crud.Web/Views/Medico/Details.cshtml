@model Crud.Domain.Medicos.Medico

@{
    ViewData["Title"] = "Detalhes do Médico";
}

<div class="row">
    <h4>Médico</h4>
    <hr />
    <div class="col-md-12">
        <dl class="dl-horizontal">
            <dt>Nome:</dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>Especialidade:</dt>
            <dd>
                @Html.DisplayFor(model => model.Especialidade.Descricao)
            </dd>
        </dl>
    </div>

    <div id="actions" class="row">
        <div class="col-md-12">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deletar</a>
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </div>
</div>
