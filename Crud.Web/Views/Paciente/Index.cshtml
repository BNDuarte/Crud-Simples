@model IEnumerable<Crud.Domain.Pacientes.Paciente>
@{
    ViewData["Title"] = "Pacientes";
}
<h2>Pacientes</h2>
<p>
    <a asp-action="Create">Adicionar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Cartão do SUS
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CartaoSus)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>|
                    <a asp-controller="Consulta" asp-action="Delete" asp-route-id="@item.Id">Consultas</a>
                </td>
            </tr>
        }
    </tbody>
</table>
